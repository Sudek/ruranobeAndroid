<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <ImageView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/info_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cover"
        android:text="Title name"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/info_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_title_name"
        android:text="Author"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/info_author"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/info_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:text="Status"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/info_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_status"
        android:text="Translation status"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/info_about_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_translation"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        />
  </RelativeLayout>
</ScrollView>